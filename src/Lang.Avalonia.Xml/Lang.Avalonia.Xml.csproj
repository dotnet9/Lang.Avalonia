<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<Title>Lang.Avalonia.Xml</Title>
		<TargetFrameworks>net8.0;net9.0;net10.0</TargetFrameworks>
		<OutputType>Library</OutputType>
		<IsPackable>true</IsPackable>
		<Description>Avalonia UI 国际化解决方案的 XML 插件，提供 XML 格式的多语言资源加载支持</Description>
		<PackageIcon>logo.png</PackageIcon>
		<PackageTags>$(PackageTags);Xml;Localization</PackageTags>
		<PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
		<RepositoryType>git</RepositoryType>
		<GeneratePackageOnBuild Condition="'$(Configuration)' == 'Release'">true</GeneratePackageOnBuild>
		<PackageReadmeFile>README.md</PackageReadmeFile>
	</PropertyGroup>

	<PropertyGroup Condition="$([MSBuild]::IsTargetFrameworkCompatible('$(TargetFramework)', 'net8.0'))">
		<IsAotCompatible>true</IsAotCompatible>
	</PropertyGroup>

	<PropertyGroup Condition="$([MSBuild]::IsTargetFrameworkCompatible('$(TargetFramework)', 'net9.0'))">
		<IsAotCompatible>true</IsAotCompatible>
	</PropertyGroup>

	<PropertyGroup Condition="$([MSBuild]::IsTargetFrameworkCompatible('$(TargetFramework)', 'net10.0'))">
		<IsAotCompatible>true</IsAotCompatible>
	</PropertyGroup>

	<ItemGroup>
		<ProjectReference Include="..\Lang.Avalonia\Lang.Avalonia.csproj" />
	</ItemGroup>

	<ItemGroup>
		<None Include="..\..\README.xml.md" Pack="true" PackagePath="README.md" />
		<None Include="..\..\logo.png" Pack="true" PackagePath="" />
	</ItemGroup>

</Project>